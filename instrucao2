    <script>
        // Navegação de Abas
        function openTab(tabName) {
            var i;
            var x = document.getElementsByClassName("visible-tab");
            // Oculta os visiveis
            for (i = 0; i < x.length; i++) {
                x[i].className = "hidden-tab"; 
            }
            
            // Remove active dos botões
            var navs = document.getElementsByClassName("nav-item");
            for (i = 0; i < navs.length; i++) {
                navs[i].className = navs[i].className.replace(" active", "");
            }

            // Mostra o atual
            document.getElementById(tabName).className = "visible-tab";
            document.getElementById("tab-" + tabName).className += " active";
        }

        // Função de Copiar
        function copyText(elementId) {
            var text = document.getElementById(elementId).innerText;
            navigator.clipboard.writeText(text).then(function() {
                alert('Cláusula copiada com sucesso!');
            }, function(err) {
                console.error('Erro ao copiar: ', err);
            });
        }

        // Gráfico TJ-SP
        const ctx = document.getElementById('jurisChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Equipamento Defeituoso (Resp. Objetiva)', 'Falta de Supervisão (Culpa in Vigilando)', 'Piso/Ambiente Inseguro', 'Outros'],
                datasets: [{
                    data: [45, 35, 15, 5],
                    backgroundColor: ['#78350f', '#b45309', '#d6d3d1', '#fafaf9'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'right', labels: { font: { family: 'Inter', size: 10 } } }
                }
            }
        });
    </script>
